<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.arcadsoftware</groupId>
		<artifactId>arcadsoftware</artifactId>
		<version>1.0.0</version>
	</parent>

	<artifactId>com.arcadsoftware.aev</artifactId>
	<version>9.3.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<tycho.version>1.2.0</tycho.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<repositories>
		<repository>
			<id>eclipse-neon</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/neon</url>
		</repository>
		<repository>
			<id>eclipse-rap</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/rt/rap/2.3</url>
		</repository>
		<repository>
			<id>eclipse-rap-incubator-fileupload</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/rt/rap/incubator/2.1/fileupload</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<includeAllDependencies>true</includeAllDependencies>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>aev.core</module>
		<module>aev.core.ui</module>
		<module>aev.core.ui.rap</module>
		<module>aev.core.ui.rcp</module>
		<module>aev.core.libraries</module>
		<module>aev.core.services</module>
		<module>aev.list.manager</module>
<!--
		<module>aev.ant.tasks</module>
-->
		<module>aev.core.features</module>
		<module>releng</module>
	</modules>
</project>
