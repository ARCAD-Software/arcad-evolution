<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.arcadsoftware</groupId>
		<artifactId>arcadsoftware</artifactId>
		<version>1.0.0</version>
	</parent>

	<artifactId>com.arcadsoftware.aev</artifactId>
	<version>9.3.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<tycho.version>1.2.0</tycho.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<includeAllDependencies>true</includeAllDependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<executionEnvironment>JavaSE-1.8</executionEnvironment>
					<target>
						<artifact>
							<groupId>com.arcadsoftware</groupId>
							<artifactId>com.arcadsoftware.aev.platform</artifactId>
							<version>9.3.0-SNAPSHOT</version>
						</artifact>
					</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>aev.core</module>
		<module>aev.core.ui</module>
		<module>aev.core.ui.rap</module>
		<module>aev.core.ui.rcp</module>
		<module>aev.core.libraries</module>
		<module>aev.core.services</module>
		<module>aev.list.manager</module>
		<!-- <module>aev.ant.tasks</module> -->
		<module>aev.core.features</module>
		<module>releng</module>
	</modules>
</project>
